<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcomeback" >

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:onClick="omgClick"
        android:paddingBottom="14.0dip"
        android:paddingTop="14.0dip"
        android:text="版本 0.1"
        android:textColor="#f5f5dc"

        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/version_text"
        android:layout_centerHorizontal="true"
        android:text="手机路由，远程管理手机"
        android:textColor="#f5f5dc"
        android:textSize="14.0sp" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon"
        android:layout_above="@+id/logo_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14.0dip"
        android:layout_marginTop="8.0dip"

        android:text="Copyright(c)2014 Imudges MPDD All Rights Reserved."
        android:textColor="#f5f5dc"
        android:textSize="10.0sp" />

    <TextView
        android:id="@+id/company_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright_text"
        android:layout_centerHorizontal="true"
        android:text="Imudges.com"
        android:textColor="#f5f5dc"
        android:textSize="10.0sp" />


</RelativeLayout>